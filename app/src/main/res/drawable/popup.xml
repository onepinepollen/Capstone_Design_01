<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#05172D"/> <!-- 내부 색상 -->
            <stroke
                android:width="2dp"
                android:color="#05172D"/> <!-- 테두리 색상과 두께 -->
        </shape>
    </item>
    <item android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 내부 색상 -->
            <stroke
                android:width="2dp"
                android:color="#E6C685"/> <!-- 테두리 색상과 두께 -->
        </shape>
    </item>
</layer-list>