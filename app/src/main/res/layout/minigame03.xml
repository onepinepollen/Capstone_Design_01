<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTest"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button01"
        android:textColor="#E6C685"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:text="랜덤 질문" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_01" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_02" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_03" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_04" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_05" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_06" />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_07" />
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_08" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:gravity="center"
            android:visibility="invisible"
            app:srcCompat="@drawable/minigame3_09" />


    </FrameLayout>

    <!--공유버튼 -->
    <Button
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button01"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintVertical_bias="0.96" />

</LinearLayout>